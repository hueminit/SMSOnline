@model Models.ViewModel.Others.DepositRequestModel

@{
    ViewData["Title"] = "Deposit";
}

<div class="row w-100 m-0">
    <div class="offset-md-6 col-md-5 container w-100">
        <h2>@ViewData["Title"]</h2>
        <hr class="hr-2" />
        @if (Model.CreditCardItems.Any())
        {
            using (Html.BeginForm("Index", "Deposit", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="form-group">
                        @Html.DropDownListFor(model => Model.Deposit.CreditCardId, Model.CreditCardItems)
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Deposit.Amount, new
                        {
                            @class = "form-control",
                            @placeholder = "Enter amount...",
                            @required = "required",
                            @autofocus = "autofocus"
                        })
                    </div>
                    <hr />
                    <div>
                        <input type="submit" value="Deposit" class="btn btn-info btn-lg btn-block" />
                    </div>
                </div>
            }

        }
        else
        {
            <h4>
                <i>
                    You cannot make a deposit without a credit card. Consider
                    <a onclick="window.location.href='/CreditCard/Create'">registering</a> one yourself.
                </i>
            </h4>
        }
    </div>
</div>