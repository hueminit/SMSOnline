@model Models.Shared.PaginationSet<Models.ViewModel.AppUserViewModel>
@{
    var keyword = (string)ViewBag.Keyword;
}
<!-- begin::page-header -->
<div class="page-header">
    <div class="container-fluid d-sm-flex justify-content-between">
        <h4>Search</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Pages</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Search</li>
            </ol>
        </nav>
    </div>
</div>
<!-- end::page-header -->

<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">

            <div class="card">
                <div class="card-body" style="min-height:80vh">
                    <div class="card p-t-b-40" style="background: url('/Content/app/assets/media/image/banner-find-user.jpg') no-repeat center; background-size: cover">
                        <div class="container">
                            <div class="row d-flex justify-content-center">
                                <div class="col-md-6">
                                    <h2 class="mb-4 text-center">What do you want to find?</h2>
                                    <form method="get" action="/Contact/FindUser" id="contact-search">
                                        <div class="input-group mb-3">
                                            <input type="text" class="form-control"
                                                   aria-label="Example text with button addon"
                                                   placeholder="Search..." autofocus
                                                   aria-describedby="button-addon1" name="keyword">
                                            <div class="input-group-append">
                                                <a class="btn btn-primary" type="submit"
                                                   id="button-addon1" href="javascript:document.getElementById('contact-search').submit()">
                                                    <i data-feather="search"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (Model.Items.Any())
                    {
                    <h4 class="mb-5">
                        <i data-feather="search"></i>
                        @Model.TotalCount results found for: <span class="text-primary">“@keyword”</span>
                    </h4>
                    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">

                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#users" role="tab" aria-controls="users"
                               aria-selected="true">Users</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="users" role="tabpanel">
                            <ul class="list-group list-group-flush">
                                @foreach (var user in Model.Items)
                                    {
                                <li class="list-group-item p-l-r-0">
                                    <div class="media row align-items-center">
                                        <div class="media__user-infor col-12 col-md-6 col-lg-7 col-xl-8 d-flex">
                                            <figure class="avatar m-r-15">
                                                <img src="@(string.IsNullOrWhiteSpace(user.Avatar) ? Common.Constants.AvatarDefault : user.Avatar)" class="rounded-circle" alt="image" width="128" height="128">
                                            </figure>
                                            <div class="media-body">
                                                <h5>@user.FullName</h5>
                                                <p class="m-b-0">Tax Accountant</p>
                                            </div>
                                        </div>
                                        <div class="contact-action col-12 col-md-6 col-lg-5 col-xl-4 d-flex justify-content-between">
                                            <a href="/Chat/Index?profileId=@user.Id" class="btn btn-warning">Chat</a>
                                            @if (user.IsFriendWithCurrentUser)
                                            {

                                            }
                                            else if (user.IsCurrentUserSendRequest && user.StatustRequest)
                                            {
                                                <form method="post" action="/Contact/CancelRequest" id="contact-cancel">
                                                    <input type="text" hidden name="profileId" value="@user.Id">
                                                    <a href="javascript:document.getElementById('contact-cancel').submit()" type="submit" class="btn btn-primary">Cancel</a>
                                                </form>
                                            }
                                            else if (!user.IsCurrentUserSendRequest && user.StatustRequest)
                                            {
                                                <form method="post" action="/Contact/AcceptRequest" id="contact-accept">
                                                    <input type="text" hidden name="profileId" value="@user.Id">
                                                    <a href="javascript:document.getElementById('contact-accept').submit()" type="submit" class="btn btn-primary">Accept</a>
                                                </form>
                                                <form method="post" action="/Contact/CancelRequest" id="contact-cancel">
                                                    <input type="text" hidden name="profileId" value="@user.Id">
                                                    <a href="javascript:document.getElementById('contact-cancel').submit()" type="submit" class="btn btn-primary">Cancel</a>
                                                </form>
                                            }
                                            else
                                            {
                                                <form method="post" action="/Contact/AddContact" id="contact-add">
                                                    <input type="text" hidden name="profileId" value="@user.Id">
                                                    <a href="javascript:document.getElementById('contact-add').submit()" type="submit" class="btn btn-primary">Add Contact</a>
                                                </form>
                                            }
                                            <a onclick="window.location.href = '/Profile/Index?profileId=@user.Id'" class="btn btn-success">View Detail</a>
                                        </div>
                                        </div>
                                </li>
                                    }
                            </ul>
                        </div>
                    </div>
                        {
                            Html.RenderPartial("_Paging", Model);
                        }
                    }
                    else
                    {
                    <h4 class="mb-5">
                        <i data-feather="search"></i>
                        Not found contact
                    </h4>
                    }
                </div>
            </div>
        </div>
    </div>
</div>