@model SMSOnline.Models.AccountViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "SMSOnline Forgot your password?";
    ViewData["MetaDescription"] = "SMSOnline Forgot your password?";
    ViewData["MetaKeyword"] = "SMSOnline Forgot your password?";
}


<!-- Breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="/">Home</a><span>&raquo;</span></li>
                    <li><strong>@ViewData["Title"]</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Main Container -->
<section class="main-container col1-layout">
    <div class="main container">
        <div class="page-content">
            <div class="account-login">
                <div class="col-md-3 col-sm-2"></div>
                <div class="col-md-6 col-sm-8">
                    <div>
                        <h4>Enter your email.</h4>
                        <form asp-action="ForgotPassword" method="post">

                            <div class="col-xs-12">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>

                            <div class="col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-xs-12">
                                <label>  </label>
                                <recaptcha />
                                <span class="text-danger" id="recaptchaErrorMessage"></span>
                            </div>

                            <div class="col-xs-12">
                                <label>  </label>
                                <button type="submit" class="btn btn-default">Submit</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Main Container End -->

@section Scripts {
   
    <recaptcha-script validation-message-element-id="recaptchaErrorMessage" />
}
