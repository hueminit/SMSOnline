<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"] - SMSOnline</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/app/assets/media/image/favicon.png" />

    <!-- Plugin styles -->
    <link rel="stylesheet" href="~/app/vendors/bundle.css" type="text/css">

    <!-- Slick.js styles -->
    <link rel="stylesheet" href="~/app/vendors/slick/slick.css" type="text/css">
    <link rel="stylesheet" href="~/app/vendors/slick/slick-theme.css" type="text/css">

    <!-- App styles -->
    <link rel="stylesheet" href="~/app/assets/css/app.min.css" type="text/css">
    @RenderSection("Css", required: false)
</head>
<body>

    <!-- begin::preloader-->
    <div class="preloader">
        <div class="preloader-icon"></div>
    </div>
    <!-- end::preloader -->
    <!-- begin::header -->
    <partial name="_Header.cshtml" />
    <!-- end::header -->

    <div id="main">

        <!-- begin::navigation -->
        <partial name="_Navigation.cshtml" />
        <!-- end::navigation -->
        <!-- begin::main content -->
        <main class="main-content">

            @RenderBody()

            <!-- begin::footer -->
            <partial name="_Footer.cshtml" />
            <!-- end::footer -->

        </main>
        <!-- end::main content -->

    </div>

    <!-- Plugin scripts -->
    <script src="~/app/vendors/bundle.js"></script>

    <!-- Slick.js -->
    <script src="~/app/vendors/slick/slick.min.js"></script>

    <!-- Chartjs -->
    <script src="~/app/vendors/charts/chartjs/chart.min.js"></script>

    <!-- Apex chart -->
    <script src="https://apexcharts.com/samples/assets/irregular-data-series.js"></script>
    <script src="~/app/vendors/charts/apex/apexcharts.min.js"></script>

    <!-- Circle progress -->
    <script src="~/app/vendors/circle-progress/circle-progress.min.js"></script>

    <!-- Dashboard scripts -->
    <script src="~/app/assets/js/examples/dashboard.js"></script>
    <div class="colors">
        <!-- To use theme colors with Javascript -->
        <div class="bg-primary"></div>
        <div class="bg-primary-bright"></div>
        <div class="bg-secondary"></div>
        <div class="bg-secondary-bright"></div>
        <div class="bg-info"></div>
        <div class="bg-info-bright"></div>
        <div class="bg-success"></div>
        <div class="bg-success-bright"></div>
        <div class="bg-danger"></div>
        <div class="bg-danger-bright"></div>
        <div class="bg-warning"></div>
        <div class="bg-warning-bright"></div>
    </div>

    <!-- App scripts -->
    <script src="~/app/assets/js/app.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script>
        $(function () {
            $('.slick-js').slick({
                speed: 500,
                arrows: false,
                slidesToShow: 5,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 2000,
                responsive: [
                    {
                        breakpoint: 1200,
                        settings: {
                            slidesToShow: 3
                        }
                    },
                    {
                        breakpoint: 992,
                        settings: {
                            slidesToShow: 2
                        }
                    },
                    {
                        breakpoint: 768,
                        settings: {
                            slidesToShow: 1
                        }
                    }
                ]
            });
        })
    </script>
</body>
</html>