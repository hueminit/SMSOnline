@using Microsoft.AspNet.Identity

<div class="navigation">
    @if (Request.IsAuthenticated && !string.IsNullOrEmpty(User?.Identity?.Name))
    {
       @Html.Partial("_LoginPartial")
    }
    <!-- begin::navigation menu -->
    <div class="navigation-menu-body">

        <!-- begin::navigation-logo -->
        <div>
            <div id="navigation-logo">
                <a href="">
                    <img class="logo" src="~/Content/app/assets/media/image/logo.png" alt="logo">
                    <img class="logo-light" src="~/Content/app/assets/media/image/logo-light.png" alt="light logo">
                </a>
            </div>
        </div>
        <!-- end::navigation-logo -->

        <div class="navigation-menu-group">

            <div class="open" id="dashboards">
                <ul>
                    <li><a onclick="window.location.href='/Contact/FindUser'" class="cursor-pointer">Find User</a></li>
                    <li><a onclick="window.location.href='/Contact/Index'" class="cursor-pointer">Contacts</a></li>
                    <li><a onclick="window.location.href='/Chat/AllMessage'" class="cursor-pointer">Chat</a></li>
                    <li>
                        <a href="javascript:void(0)">Bank</a>
                        <ul style="display: block;">
                            <li><a onclick="window.location.href='/Transaction'" class="cursor-pointer">All Transactions</a></li>
                            <li><a onclick="window.location.href='/CreditCard'" class="cursor-pointer">All CreditCard</a></li>
                            <li><a onclick="window.location.href='/CreditCard/Create'" class="cursor-pointer">Create CreditCard</a></li>
                            <li><a onclick="window.location.href='/Deposit'" class="cursor-pointer">Deposit</a></li>
                        </ul>
                    </li>
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>
                            <a href="javascript:void(0)" class="cursor-pointer">For Admin</a>
                            <ul style="display: block;">
                                <li><a onclick="window.location.href='/SystemConfig'" class="cursor-pointer">System Config</a></li>
                                <li>
                                    <a href="javascript:void(0)" class="cursor-pointer">Report</a>
                                    <ul>
                                        <li>
                                            <a onclick="window.location.href = '/Report'" class="cursor-pointer">All Deposit</a>
                                        </li>
                                        <li>
                                            <a onclick="window.location.href = '/Report/TransationUser'" class="cursor-pointer">Transation User</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <!-- end::navigation menu -->
</div>